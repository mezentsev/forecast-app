<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="pro.mezentsev.forecast">

    <application
            android:name="pro.mezentsev.forecast.ForecastApp"
            android:allowBackup="true"
            android:icon="@drawable/ic_tornado"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_tornado"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="pro.mezentsev.forecast.current.ui.CurrentForecastActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>