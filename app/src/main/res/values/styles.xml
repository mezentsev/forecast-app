<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Text">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Time">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/forecast_time_size</item>
    </style>

    <style name="Text.Summary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/forecast_summary_size</item>
    </style>

</resources>
